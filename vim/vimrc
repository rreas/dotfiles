set nocompatible              " be iMproved, required
set shell=/usr/local/bin/zsh

" Vundle packages
source $HOME/.dotfiles/vim/vundle.vim

set number
set cursorline
set hlsearch
set smartcase
set ignorecase
set expandtab
set autoindent
set smartindent
set relativenumber
set hidden
set textwidth=80
set clipboard=unnamed

let &colorcolumn=join(range(81,999),",")

" Always use 2 spaces.
set shiftwidth=2
set tabstop=2

" Global directory for undo files.
set undofile
set undodir^=~/.vim/undo

" Where to store swap files.
set directory=/tmp,/var/tmp,.

" Themes...
set background=dark
colorscheme solarized

set statusline=   " clear the statusline for when vimrc is reloaded
set statusline+=\                            " single space
set statusline+=%f\                          " file name
set statusline+=[%{strlen(&ft)?&ft:'none'}]  " filetype
set statusline+=%h%m%r%w                     " flags
set statusline+=%=                           " right align
set statusline+=%P

" Use Silver Searcher instead of grep
set grepprg=ag

" File encding.
set encoding=utf-8

" Keyboard shortcuts
source $HOME/.dotfiles/vim/keyboard_shortcuts.vim

" Rename current file (courtesy of Gary Bernhardt)
source $HOME/.dotfiles/vim/rename_current_file.vim

" Display extra whitespace
set list listchars=tab:»·,trail:·

" ESC to cancel in Command-T
let g:CommandTCancelMap=['<ESC>','<C-c>']
